<div>
  <div>
    <h1>
      Brew #<%= @the_brew.id %> details
    </h1>

    <div>
      <div>
        <a href="/brews">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_brew/<%= @the_brew.id %>">
          Delete brew
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Bean
      </dt>
      <dd>
        <%= @the_brew.bean_id %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @the_brew.user_id %>
      </dd>

      <dt>
        Device
      </dt>
      <dd>
        <%= @the_brew.device_id %>
      </dd>

      <dt>
        Grind setting
      </dt>
      <dd>
        <%= @the_brew.grind_setting %>
      </dd>

      <dt>
        Flavors
      </dt>
      <dd>
        <%= @the_brew.flavors %>
      </dd>

      <dt>
        Grinder
      </dt>
      <dd>
        <%= @the_brew.grinder %>
      </dd>

      <dt>
        Water temp
      </dt>
      <dd>
        <%= @the_brew.water_temp %>
      </dd>

      <dt>
        Comments
      </dt>
      <dd>
        <%= @the_brew.comments %>
      </dd>

      <dt>
        Instructions
      </dt>
      <dd>
        <%= @the_brew.instructions_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_brew.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_brew.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit brew
    </h2>

    <form action="/modify_brew/<%= @the_brew.id %>"  method="post" >
      <div>
        <label for="bean_id_box">
          Bean
        </label>

        <input type="text" id="bean_id_box" name="query_bean_id" value="<%= @the_brew.bean_id %>">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id" value="<%= @the_brew.user_id %>">
      </div>

      <div>
        <label for="device_id_box">
          Device
        </label>

        <input type="text" id="device_id_box" name="query_device_id" value="<%= @the_brew.device_id %>">
      </div>

      <div>
        <label for="grind_setting_box">
          Grind setting
        </label>

        <input type="text" id="grind_setting_box" name="query_grind_setting" value="<%= @the_brew.grind_setting %>">
      </div>

      <div>
        <label for="flavors_box">
          Flavors
        </label>

        <input type="text" id="flavors_box" name="query_flavors" value="<%= @the_brew.flavors %>">
      </div>

      <div>
        <label for="grinder_box">
          Grinder
        </label>

        <input type="text" id="grinder_box" name="query_grinder" value="<%= @the_brew.grinder %>">
      </div>

      <div>
        <label for="water_temp_box">
          Water temp
        </label>

        <input type="text" id="water_temp_box" name="query_water_temp" value="<%= @the_brew.water_temp %>">
      </div>

      <div>
        <label for="comments_box">
          Comments
        </label>

        <input type="text" id="comments_box" name="query_comments" value="<%= @the_brew.comments %>">
      </div>

      <div>
        <label for="instructions_id_box">
          Instructions
        </label>

        <input type="text" id="instructions_id_box" name="query_instructions_id" value="<%= @the_brew.instructions_id %>">
      </div>

      <button>
        Update brew
      </button>
    </form>
  </div>
</div>

<hr>
