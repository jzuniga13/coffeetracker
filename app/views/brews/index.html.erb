<div>
  <div>
    <div class="display-4">
      List of all your brews
    </div>
  </div>
</div>

<hr>

<div>
  <div>
    <table class="table">
      <thead class="thead-dark">
        <tr>
          <th>
            Brew Date
          </th>

          <th>
            Bean
          </th>

          <th>
            Roaster
          </th>

          <th>
            Device
          </th>

          <th>
            Grinder
          </th>

          <th>
            Grind Setting
          </th>

          <th>
            Coffee Weight (g)
          </th>

          <th>
            Water Temp (C)
          </th>
          
          <th>
            Flavor Notes
          </th>

          <th>
            Comments
          </th>

          <th>
          </th>
        </tr>
      </thead>

      <tbody>
        <% @list_of_brews.each do |a_brew| %>
        <tr>
          <td>
            <%= a_brew.created_at.strftime("%m/%d/%Y") %>
          </td>

          <td>
            <%= a_brew.bean.name %>
          </td>

          <td>
            <%= a_brew.bean.roaster.name %>
          </td>

          <td>
            <%= a_brew.device.device %>
          </td>

          <td>
            <%= a_brew.grinder %>
          </td>

          <td>
            <%= a_brew.grind_setting %>
          </td>

          <td>
            <%= a_brew.coffee_weight %>
          </td>

          <td>
            <%= a_brew.water_temp %>
          </td>

          <td>
            <%= a_brew.flavors %>
          </td>

          <td>
            <%= a_brew.comments %>
          </td>

          <td>
            <a href="/brews/<%= a_brew.id %>">
              Show details
            </a>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
