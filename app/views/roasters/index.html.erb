<div>
  <div>
    <div class="display-4">
      List of all roasters
    </div>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new roaster
    </h2>

    <form action="/insert_roaster" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create roaster
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Name
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_roasters.each do |a_roaster| %>
      <tr>
        <td>
          <%= a_roaster.id %>
        </td>

        <td>
          <%= a_roaster.name %>
        </td>

        <td>
          <%= time_ago_in_words(a_roaster.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_roaster.updated_at) %> ago
        </td>

        <td>
          <a href="/roasters/<%= a_roaster.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
