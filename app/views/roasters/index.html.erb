<div>
  <div>
    <div class="display-4">
      List of all roasters
    </div>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new roaster
    </h2>

    <form action="/insert_roaster" method="post">
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button class="btn btn-primary">
        Add roaster
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table class="table">
      <thead class="thead-dark">  
        <tr>
          <th>Roaster</th>

          <th class="text-center">Number of Beans</th>

          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @list_of_roasters.each do |a_roaster| %>
        <tr>
          <td><%= a_roaster.name %></td>

          <td class="text-center"><%=a_roaster.beans.count%></td>

          <td><a href="/roasters/<%= a_roaster.id %>">Show details</a></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<hr>
