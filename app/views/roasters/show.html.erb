<div>
  <div>
    <h1>
      Roaster #<%= @the_roaster.id %> details
    </h1>

    <div>
      <div>
        <a href="/roasters">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_roaster/<%= @the_roaster.id %>">
          Delete roaster
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Name
      </dt>
      <dd>
        <%= @the_roaster.name %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_roaster.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_roaster.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit roaster
    </h2>

    <form action="/modify_roaster/<%= @the_roaster.id %>"  method="post" >
      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_roaster.name %>">
      </div>

      <button>
        Update roaster
      </button>
    </form>
  </div>
</div>

<hr>
