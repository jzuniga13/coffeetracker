<div class="display-4">Hello <%= @current_user.first_name %>.</div>

<p></p>

<h3 class="text-decoration-none">What are we brewing today?</h3>

<div>
  <div class="container">
    <div class="row p-sm-3">
      <% Device.all.each do |dev| %>
        <div class="m-sm-1">
          <form action="/brew_method/<%=dev.device%>">
            <button class="btn btn-primary">
              <%= dev.device %>
            </button>
          </form>
        </div>
      <% end %>
    </div>
    
    <div class="row p-sm-3">
      <form action="/devices">
        <button class="btn btn-outline-primary">
          Add a new device
        </button>
      </form>
    </div>
  </div>
</div>


