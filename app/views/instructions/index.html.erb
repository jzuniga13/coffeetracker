        <td>
          <%= an_instruction.id %>
        </td>

        <td>
          <%= an_instruction.step_1_action %>
        </td>

        <td>
          <%= an_instruction.step_1_weight %>
        </td>

        <td>
          <%= an_instruction.step_1_time %>
        </td>

        <td>
          <%= an_instruction.step_2_action %>
