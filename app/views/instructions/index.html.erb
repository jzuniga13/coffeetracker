      <div>
        <label for="step_4_action_box">Action</label>
        <select id="step_4_action_box" name="query_step_4_action">
          <option class="dropdown-item" >Pour</option>
          <option class="dropdown-item" >Wait</option>
          <option class="dropdown-item" >Bloom</option>
          <option class="dropdown-item" >Swirl</option>
          <option class="dropdown-item" >Pre-Infusion</option>
        </select>
      </div>
      <div>
        <label for="step_4_weight_box">End weight (g)</label>
        <input type="text" id="step_4_weight_box" name="query_step_4_weight">
