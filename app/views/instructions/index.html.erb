          <%= an_instruction.step_4_action %>
        </td>

        <td>
          <%= an_instruction.step_4_weight %>
        </td>

        <td>
          <%= an_instruction.step_4_time %>
        </td>

        <td>
          <%= an_instruction.step_5_action %>
        </td>

        <td>
          <%= an_instruction.step_5_weight %>
        </td>

        <td>
          <%= an_instruction.step_5_time %>
        </td>

        <td>
          <%= time_ago_in_words(an_instruction.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_instruction.updated_at) %> ago
        </td>

        <td>
          <a href="/instructions/<%= an_instruction.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
