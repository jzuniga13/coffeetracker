<div>
  <div>
    <h1>
      List of all instructions
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new instruction
    </h2>

    <form action="/insert_instruction" method="post">
      <h4>Step 1</h4>
      <div>
        <label for="step_1_action_box">Action</label>
        <select id="step_1_action_box" name="query_step_1_action">
          <option class="dropdown-item" >Pour</option>
          <option class="dropdown-item" >Wait</option>
          <option class="dropdown-item" >Bloom</option>
          <option class="dropdown-item" >Swirl</option>
          <option class="dropdown-item" >Pre-Infusion</option>
        </select>
      </div>
      <div>
        <label for="step_1_weight_box">End weight (g)</label>
        <input type="text" id="step_1_weight_box" name="query_step_1_weight">
      </div>
      <div>
        <label for="step_1_time_box">End time (m:ss)</label>
        <input type="text" id="step_1_time_box" name="query_step_1_time">
      </div>

      <h4>Step 2</h4>
      <div>
        <label for="step_2_action_box">Action</label>
